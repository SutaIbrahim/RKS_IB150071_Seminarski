        <TextView
            android:id="@+id/nazivLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="116dp"
            android:text="Kompanija"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/TelefonLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
            android:layout_below="@+id/nazivLbl"
                android:layout_marginLeft="22dp"
            android:text="Telefon:"
            android:textStyle="bold"
            android:layout_gravity="center"



            />

        <TextView
            android:id="@+id/skillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/TelefonLbl"
            android:layout_marginLeft="24dp"

            android:layout_gravity="center"

            android:text="Adresa:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/skillsLabel"
            android:layout_marginLeft="33dp"

            android:text="Email:"
            android:textStyle="bold"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/usernameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Kompanija"
            android:layout_toRightOf="@id/skillsLabel"
            android:layout_below="@id/telTxt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/telTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_toRightOf="@id/TelefonLbl"
            android:layout_below="@id/nazivLbl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="061/123-456" />

        <TextView
            android:id="@+id/emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"
            android:text="korisnik@gmail.com"
            android:inputType="textPersonName"

            android:layout_toRightOf="@id/emailLabel"
            android:layout_below="@id/usernameTxt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

