        <TextView
            android:id="@+id/imePrezimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="216dp"
            android:text="Korisnik Korisnik"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TelefonLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="261dp"
            android:layout_toStartOf="@+id/profile_image"
            android:text="Telefon:"
            android:layout_toLeftOf="@+id/profile_image" />

        <TextView
            android:id="@+id/skillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="204dp"
            android:layout_toStartOf="@+id/profile_image"
            android:text="Korisnicko ime:" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="151dp"
            android:layout_toStartOf="@+id/profile_image"
            android:text="Email:" />


        <EditText
            android:id="@+id/usernameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/skillsLabel"
            android:layout_alignBottom="@+id/skillsLabel"
            android:layout_alignLeft="@+id/telefonTxt"
            android:layout_alignStart="@+id/telefonTxt"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="korisnik" />

        <EditText
            android:id="@+id/telefonTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TelefonLbl"
            android:layout_alignBottom="@+id/TelefonLbl"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/TelefonLbl"
            android:layout_toRightOf="@+id/TelefonLbl"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="061/123-456" />

        <EditText
            android:id="@+id/emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/emailLabel"
            android:layout_alignStart="@+id/usernameTxt"
            android:ems="10"
            android:text="korisnik@gmail.com"
            android:inputType="textPersonName" />

    <!--    <Button
            android:id="@+id/sacuvajPromjeneBtn"
